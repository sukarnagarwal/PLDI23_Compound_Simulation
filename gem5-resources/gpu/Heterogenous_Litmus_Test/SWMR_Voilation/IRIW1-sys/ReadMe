// Replace the files from the gem5's (placed at src/mem/ruby/protocol/) SWMR voilation folder and then build the gem5 with the following command:

sudo docker run --rm -v $PWD/gem5:/gem5 -w /gem5 gcn-gpu2 scons -sQ -j4 build/GCN3_X86/gem5.opt


// Command to create the binary, from the source litmus test file

sudo docker run --rm -v ${PWD}:${PWD} -w ${PWD} -u $UID:$GID gcn-gpu2 make



// Gem5 command to run the litmus test

sudo docker run -u $UID:$GID --volume $(pwd):$(pwd) -w $(pwd) gcn-gpu2 gem5/build/GCN3_X86/gem5.opt --stats-file=stats_check_protocol_IRIW1_Hetero_Relax_4096runs_SWMR_Voilation gem5/configs/example/apu_se.py --cpu-type=DerivO3CPU -n 32 -c gem5-resources/gpu/Heterogenous_Litmus_Test/IRIW/bin/IRIW_Ver1_Relax_SWMR_voilation -o 16


// Results Obtained from the terminal window

// IRIW1 (Loads on CPU and stores on GPU) (known as IRIW1-sys with no SWMR in the paper)

